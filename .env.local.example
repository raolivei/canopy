# Canopy Local Development Environment
# Copy this file to .env.local and update values as needed

# Frontend Port (assigned: 3001 to avoid conflict with us-law-severity-map)
PORT=3001

# Backend API URL (assigned: 8001 to avoid conflict with swimTO-api)
NEXT_PUBLIC_API_URL=http://localhost:8001

# Backend API Port
API_PORT=8001

# Database (assigned: 5433 to avoid conflict with swimTO-postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/canopy

# Redis (assigned: 6380 to avoid conflict with swimTO-redis)
REDIS_URL=redis://localhost:6380/0

# Other settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1
API_V1_PREFIX=/v1

